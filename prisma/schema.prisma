datasource db {
  provider = "sqlite"
  url      = "file:db.sqlite3"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @unique
  password String

  name       String
  avatar     String
  bio        String
  registerAt DateTime
  Posts      Post[]
}

model Channel {
  id    String @id
  Posts Post[]
}

model Post {
  id      Int    @id @default(autoincrement())
  title   String
  content String

  likes    Int
  dislikes Int

  author    User    @relation(fields: [userId], references: [id])
  channel   Channel @relation(fields: [channelId], references: [id])
  userId    String
  channelId String
}
