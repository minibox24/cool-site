datasource db {
  provider = "sqlite"
  url      = "file:db.sqlite3"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @unique
  password String

  name       String
  avatar     String
  bio        String
  registerAt DateTime
  posts      Post[]
  comments   Comment[]
}

model Channel {
  id    String @id
  description   String
  posts Post[]
}

model Post {
  id      Int    @id @default(autoincrement())
  title   String
  content String

  likes    Int @default(0)
  dislikes Int @default(0)
  comments Comment[]

  author    User    @relation(fields: [userId], references: [id])
  channel   Channel @relation(fields: [channelId], references: [id])
  userId    String
  channelId String
}

model Comment {
  id      Int    @id @default(autoincrement())
  content String

  author User   @relation(fields: [userId], references: [id])
  post   Post   @relation(fields: [postId], references: [id])
  userId String
  postId Int
}
